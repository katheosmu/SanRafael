<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyleTittle">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/lightseagreen</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:shadowColor">@color/blue</item>
    </style>
    <style name="textViewStyleSubtittle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/lightseagreen</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:shadowColor">@color/blue</item>
    </style>
    <style name="textViewStyle">
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewStyleLand">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/aliceblue</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">30dp</item>
    </style>
</resources>
